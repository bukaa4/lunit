    "paths": {
        "/users/{userId}/slides/getAnalysis": {
            "put": {
                "tags": [
                    "slide-controller"
                ],
                "summary": "Send request to do analysis on all selected slides from AI client",
                "operationId": "sendRequestToAIClient",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/Slide"
                                }
                            },
                            "example": [
                                {
                                    "id": 4,
                                    "name": "CMU-1-Small-Region.svs",
                                    "isProcessed": false,
                                    "status": "NONE",
                                    "decision": null,
                                    "score": null,
                                    "description": "Exported region from CMU-1.svs",
                                    "format": "Aperio SVS",
                                    "license": "CC0-1.0",
                                    "size": 1938955,
                                    "sha256": "ed92d5a9f2e86df6"
                                }
                            ]
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
